<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileGUCTechTool.Pages.EditDB.EditDBFrame"
			 BackgroundColor="#FF2F2F2F"
			 x:Name="editDBFramePage"
			 NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="This is the Edit DB Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
				TextColor="White"/>
			<Button x:Name="LoadDB" Text="Refresh" Clicked="LoadDB_Clicked"/>
			<ListView x:Name="buildingListView" ItemTapped="BuildingListView_ItemTapped" SeparatorColor="White"/>

		</StackLayout>

	</ContentPage.Content>
</ContentPage>