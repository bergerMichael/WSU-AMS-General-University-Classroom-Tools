<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileGUCTechTool.Pages.Controls.LightControls"
			 BackgroundColor="#FF2F2F2F">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="&lt;   Lights   &gt;" HorizontalTextAlignment="Center" 
			   FontSize="Large" BackgroundColor="#FF2F2F2F"
			   TextColor="White"/>
			<Button x:Name="SolarShadesUp" Text="Solar Shades Up" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="SolarShadesDown" Text="Solar Shades Down" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="BlackoutShadesUp" Text="Blackout Shades Up" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="BlackoutShadesDown" Text="Blackout Shades Down" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="LightBank1On"  Text="Light Bank 1 On" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="LightBank1Off" Text="Light Bank 1 Off" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="LightBank2On" Text="Light Bank 2 On" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="LightBank2Off"  Text="Light Bank 2 Off" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="LightBank3On" Text="Light Bank 3 On" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="LightBank3Off" Text="Light Bank 3 Off" BackgroundColor="Gray" TextColor="White"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>