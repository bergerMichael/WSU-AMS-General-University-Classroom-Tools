<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileGUCTechTool.Pages.Controls.MainControl"
			 BackgroundColor="#FF2F2F2F">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Main   &gt;" HorizontalTextAlignment="Center" 
			   FontSize="Large" TextColor="White"/>
			<Button x:Name="projPwrOn" Text="Projector Power On" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="projPwrOff" Text="Projector Power Off" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="projMute" Text="Projector Mute" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="projUnmute" Text="Projector Unmute" BackgroundColor="Gray" TextColor="White"/>
			<Button x:Name="projDown" Text="Screen Down" BackgroundColor="Gray" TextColor="White"/>
            <Button x:Name="projUp" Text="Screen Up" BackgroundColor="Gray" TextColor="White"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>