<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileGUCTechTool.Pages.Controls.ControlsFrame"
			 xmlns:Pages="clr-namespace:MobileGUCTechTool.Pages.Controls"
			 xmlns:PagesMain="clr-namespace:MobileGUCTechTool.Pages"  
			 NavigationPage.HasNavigationBar="False"
             BackgroundColor="#FF2F2F2F"
             x:Name="controlPage">
    <StackLayout x:Name="mainStack">
        <StackLayout Orientation="Horizontal">
            <Label Text="Building: " TextColor="White" FontSize="20"/>
            <Picker x:Name="bldgPick" HorizontalOptions="FillAndExpand" TextColor="White"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Room: " TextColor="White" FontSize="20"/>
            <Picker x:Name="roomPick" HorizontalOptions="FillAndExpand" TextColor="White"/>
        </StackLayout>
    </StackLayout>

</ContentPage>