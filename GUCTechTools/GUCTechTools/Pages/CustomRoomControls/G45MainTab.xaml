    <UserControl x:Class="GUCTechTools.Pages.CustomRoomControls.G45MainTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUCTechTools.Pages.CustomRoomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid x:Name="controlGrid">
		<GroupBox Header="All Projectors" HorizontalAlignment="Stretch" Height="165" VerticalAlignment="Top"/>
		<Button Content="Projectors On" HorizontalAlignment="Center" Margin="10,40,448,0" VerticalAlignment="Top" Height="114" Width="117" Tag="SystemPowerOn"/>
		<Button Content="Projectors Off" HorizontalAlignment="Center" Margin="132,40,326,0" VerticalAlignment="Top" Height="114" Width="117" Tag="SystemPowerOff"/>
		<Button Content="Mute All" HorizontalAlignment="Center" Margin="254,40,204,0" VerticalAlignment="Top" Height="114" Width="117" Tag="Projector1MuteToggle"/>
		<Button Content="Unmute All" HorizontalAlignment="Center" Margin="376,40,82,0" VerticalAlignment="Top" Height="114" Width="117" Tag="Projector1MuteToggle"/>
	</Grid>
</UserControl>
